<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RMS</title>

    <meta name="theme-color" content="#000000" />
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pm.css" asp-append-version="true" />

    <!-- <link rel="stylesheet" href="~/RMS.styles.css" asp-append-version="true" /> -->
</head>


<body>

    <!-- Top Header -->
    <div class="top-header">
        <!-- Optional: Add top header content here -->
    </div>

    <!-- Main Header -->
    <header>
        <div class="main-header" style="position: sticky; ">
            <!-- Sidebar Header: Logo and Brand -->
            <div class="sidebar-header">
                <img src="~/images/cozy-logo.png" alt="logo">
                <h1>Cozy Homes</h1>
                <div class="hamburger-icon" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </div>

            </div>

            <!-- Navigation and Profile -->
            <nav>
                <ul>
                    <li class="dropdown">
                        <a href="#" class="dropbtn" aria-label="User Profile">
                            <img src="~/images/user-pic.png" alt="logo">
                            Profile
                        </a>
                        <div class="dropdown-content">
                            <a asp-controller="PropertyManager" asp-action="PMEditProfile">Edit Profile</a>
                            <a asp-controller="Login" asp-action="Logout">Log Out</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>


    <div class="sidebar">
        <ul>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMDashboard" class="nav-link active">
                    <i class="fas fa-dashboard"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMmanageUnits" class="nav-link">
                    <i class="fas fa-house"></i>
                    Units
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMTenants" class="nav-link">
                    <i class="fas fa-people-roof"></i>
                    Tenants
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMManageLease" class="nav-link">
                    <i class="fas fa-clipboard"></i>
                    Lease
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMPayments" class="nav-link">
                    <i class="fas fa-receipt"></i>
                    Payments
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMRequest" class="nav-link">
                    <i class="fas fa-hammer"></i>
                    Request
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMAssignMaintenance" class="nav-link">
                    <i class="fas fa-wrench"></i>
                    Staff
                </a>
            </li>
            <li>
                <a asp-controller="PropertyManager" asp-action="PMManageUsers" class="nav-link">
                    <i class="fas fa-person"></i>
                    Users
                </a>
            </li>
        </ul>
    </div>

    <section>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </section>
    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Cozy Homes. All rights reserved.</p>
        </div>
    </footer>

    <script>
            document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebar");
            const hamburger = document.getElementById("hamburger");
            const mainContent = document.querySelector(".main-content");

            hamburger.addEventListener("click", function () {
                sidebar.classList.toggle("hidden");

                if (sidebar.classList.contains("hidden")) {
                    mainContent.style.marginLeft = "0";
                } else {
                    mainContent.style.marginLeft = "250px";
                }
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
