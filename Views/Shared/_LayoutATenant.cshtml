<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cozy Homes - Lease</title>
    <meta name="theme-color" content="#000000" />
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    <!-- Top Header -->
    <div class="top-header">
    </div>

    <!-- Main Header -->
    <header>
        <div class="main-header">
            <!-- Logo -->
            <div class="logo">
                <img src="~/images/cozy-logo.png" alt="logo" style="height: 20px; width: 50px;">
                <h1>Cozy Homes</h1>
            </div>

            <!-- Navigation -->
            <nav>
                <ul>
                    <li><a asp-controller="ATenant" asp-action="ATenantHome">Home</a></li>
                    <li><a href="#">Units</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantLease">Lease</a></li>
                    <li><a href="#">Payment History</a></li>
                    <li><a href="#">Maintenance Request</a></li>
                    <!-- <li><a href="#">About</a></li> -->
                    <li>
                        <a href="#">
                            <img src="~/images/user-pic.png" alt="logo" style="height: 35px; width: 35px;">
                        </a>Profile
                    </li>
                </ul>
            </nav>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Cozy Homes. All rights reserved.</p>
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
