@{
    ViewData["Title"] = "Cozy Homes - Dashboard";
    Layout = "~/Views/Shared/_LayoutPM.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>User Management</h1>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>john_doe</td>
                    <td>john@example.com</td>
                    <td>
                        <select>
                            <option value="tenant">Tenant</option>
                            <option value="property_manager">Property Manager</option>
                            <option value="maintenance_staff">Maintenance Staff</option>
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </td>
                    <td><button class="invoice-button">Update</button></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>jane_smith</td>
                    <td>jane@example.com</td>
                    <td>
                        <select>
                            <option value="tenant">Tenant</option>
                            <option value="property_manager">Property Manager</option>
                            <option value="maintenance_staff">Maintenance Staff</option>
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </td>
                    <td><button class="invoice-button">Update</button></td>
                </tr>
                <!-- More rows as needed -->
            </tbody>
        </table>
    </div>

    <script>
                // script.js
        document.querySelectorAll('button').forEach(button => {
            button.addEventListener('click', function () {
                const row = this.closest('tr');
                const userId = row.cells[0].textContent;
                const username = row.cells[1].textContent;
                const email = row.cells[2].textContent;
                const role = row.querySelector('select').value;
                const status = row.querySelectorAll('select')[1].value;

                alert(`Updating user ${username} (ID: ${userId})\nEmail: ${email}\nRole: ${role}\nStatus: ${status}`);

                // In a real application, send this data to a backend system to update the user's role or status.
            });
        });

    </script>
</body>
</html>
