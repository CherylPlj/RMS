@{
    ViewData["Title"] = "Cozy Homes - Units";
    Layout = "~/Views/Shared/_LayoutPM.cshtml";
}

@model List<Unit>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Units List</title>
    <link rel="stylesheet" href="~/css/units.css" asp-append-version="true">
</head>
<body>
    <div class="container">
        <header>
            <h1>Units List</h1>
            <button id="add-unit" class="btn-add">Add Unit</button>
        </header>

        <div class="filter-section">
            <label for="month">Month:</label>
            <select id="month" name="month">
                <option value="January">January 2025</option>
                <option value="February">February 2025</option>
                <!-- Add more months as needed -->
            </select>
            <input type="text" id="search" placeholder="Search...">
        </div>

        <table class="units-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Unit Name</th>
                    <th>Price/month</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @* @foreach (var unit in Model) *@
                {
                    <tr>
                        @* <td>@unit.Id</td> *@
                        @* <td><a href="/Units/Details/@unit.Id">@unit.Name</a></td> *@
                        @* <td>@unit.Price.ToString("C")</td> *@
                        @* <td class="status @unit.Status.ToLower()">@unit.Status</td> *@
                        @* <td> *@
                            <td>1</td>
                            <td>Cozy Suite 10
                                <button>View Details</button>
                            </td>
                            <td>₱10,000</td>
                            <td>Occupied</td>
                            <button class="btn-edit">&#9998;</button>
                            <button class="btn-delete">&#128465;</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            <button class="prev">Previous</button>
            <div class="page-numbers">
                <!-- Pagination buttons -->
                <span class="current-page">1</span>
                <span>2</span>
                <span>3</span>
                <span>...</span>
                <span>12</span>
            </div>
            <button class="next">Next</button>
        </div>
    </div>

   

    <script src="~/js/units.js" asp-append-version="true"></script>
</body>
</html>
